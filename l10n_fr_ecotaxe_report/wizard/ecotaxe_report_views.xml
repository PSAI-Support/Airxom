<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ecotaxe_report_view_form" model="ir.ui.view">
        <field name="name">ecotaxe.report.view.form</field>
        <field name="model">ecotaxe.report</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <group>
                            <label for="date_from"/>
                            <div class="o_row">
                                <field name="date_from" widget="daterange" nolabel="1" class="oe_inline"
                                       options="{'related_end_date': 'date_to'}"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_to" widget="daterange" nolabel="1" class="oe_inline"
                                       options="{'related_start_date': 'date_from'}"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lignes">
                            <field name="line_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_download" string="Exporter" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ecotaxe_report_line_view_tree" model="ir.ui.view">
        <field name="name">ecotaxe.report.line.view.tree</field>
        <field name="model">ecotaxe.report.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="category"/>
                <field name="function"/>
                <field name="product_code"/>
                <field name="material"/>
                <field name="product_qty"/>
                <field name="weight"/>
                <field name="partner_ids" widget="many2many_tags"/>
                <field name="invoice_ids" widget="many2many_tags"/>
                <field name="picking_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="ecotaxe_report_line_view_form" model="ir.ui.view">
        <field name="name">ecotaxe.report.line.view.form</field>
        <field name="model">ecotaxe.report.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="product_code"/>
                            <field name="product_qty"/>
                            <field name="weight"/>
                            <field name="picking_id"/>
                        </group>
                        <group>
                            <field name="category"/>
                            <field name="function"/>
                            <field name="material"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ecotaxe_report_action_view" model="ir.actions.act_window">
        <field name="name">Rapport ecotaxe</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ecotaxe.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="ecotaxe_report_menu"
              name="Rapport ecotaxe"
              action="ecotaxe_report_action_view"
              parent="intrastat_base.menu_intrastat_base_root"
              sequence="2"/>
</odoo>